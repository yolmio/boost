{
  "name": "@yolm/boost",
  "version": "1.0.1",
  "type": "module",
  "license": "MIT",
  "files": [
    "dist/**",
    "material-icons/**",
    "scripts/**"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --minify",
    "build:watch": "bun build src/index.ts --outdir dist --target node --watch",
    "create-ts": "tsc --project tsconfig.json",
    "create-ts:watch": "tsc --project tsconfig.json --watch",
    "lint": "TIMING=1 eslint src --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "format": "prettier --write \"**/*.ts\"",
    "test:hello_world": "cd tests/hello_world && playwright test",
    "test:tutorial": "cd tests/tutorial && playwright test"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@types/bun": "latest",
    "csstype": "=3.1.3",
    "toposort": "=2.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/toposort": "=2.0.7",
    "eslint": "=8.57.0",
    "fast-glob": "=3.3.2",
    "fs-extra": "=11.2.0",
    "jsdom": "=24.0.0",
    "prettier": "=3.2.5",
    "svgo": "=3.2.0",
    "typescript": "=5.3.3"
  }
}
